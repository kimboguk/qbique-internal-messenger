# ==========================================
# QIM Environment Variables Template
# ==========================================

# Server
PORT=3003
NODE_ENV=development

# Database (Tailscale Peer IP for production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qim
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT (반드시 변경할 것!)
JWT_SECRET=change-this-to-a-random-secret
JWT_REFRESH_SECRET=change-this-to-another-random-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Tailscale
TAILSCALE_ENABLED=false
TAILSCALE_ALLOWED_IPS=100.99.64.32

# AI Service
AI_SERVICE_URL=http://localhost:8008
